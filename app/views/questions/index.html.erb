<div class="container question__show">
  <% @questions.each do |q|%>
  <div class="card question__show-body w-75">
    <div class="card-body ">
      <span>
        <%= link_to gravatar_for(q.user, size: 50), user_path(q.user) %>
        <span class="question__show-body-name"><%= link_to q.user.name, user_path(q.user) %></span>
      </span>
      <span class="question__show-body-title"><%= q.title%></span>
      <span class="question__show-body-time"><%= q.created_at.strftime('%Y/%m/%d %H:%M:%S')%></span>
    </div>
  </div>
  <% end %>
  <%= paginate @questions%>
</div>